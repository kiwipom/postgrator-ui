extends layout

block content

  #index
    .pure-g
      .pure-u-1-1
        div(align='center')
          h1= title

      .pure-u-1-1
        form.pure-form.pure-form-aligned
          fieldset
            legend Configuration Options

            .pure-control-group
              label(for="dbType") Database Type
              select#dbType
                each o in supportedDatabases
                  option(value=o.value, selected=(o.value==o.selectedDatabase)) #{o.text}

            .pure-control-group
              label(for="server") Server
              input#server(type="text", placeholder="server")

            .pure-control-group
              label(for="username") Username
              input#username(type="text", placeholder="username")

            .pure-control-group
              label(for="password") Password
              input#password(type="password", placeholder="password")

            .pure-controls
              button.pure-button.pure-button-primary(type="submit") Submit
   

      .pure-u-1-8

      .pure-u-7-8
        if message
          h3= message
